files:
  "/etc/nginx/conf.d/custom.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Custom Nginx Configuration
      server_names_hash_bucket_size 128;
      types_hash_max_size 2048;
      types_hash_bucket_size 128;

container_commands:
  01_reload_nginx:
    command: "nginx -s reload"
    leader_only: true
